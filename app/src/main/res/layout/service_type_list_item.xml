<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayoutOfList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingEnd="70dp"
    android:paddingStart="70dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/serviceTitleItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/serviceDescriptionItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        android:layout_marginBottom="5dp"/>

    <ImageView
        android:id="@+id/serviceImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center" />

    <!--<FrameLayout-->
    <!--android:id="@+id/selector_background"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:paddingEnd="10dp"-->
    <!--android:paddingStart="10dp"-->
    <!--android:paddingBottom="5dp"-->
    <!--android:paddingTop="5dp">-->

    <TextView
        android:id="@+id/serviceItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/servicePriceItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="@android:color/darker_gray"
        android:textSize="12sp" />
    <!--</FrameLayout>-->

</LinearLayout>
