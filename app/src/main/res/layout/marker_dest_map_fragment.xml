<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_store_marker"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/destination_marker_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/destination_marker"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/text_color_white"
        android:gravity="center"
        android:paddingEnd="5dp"
        android:id="@+id/destination_marker_time"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/destination_marker_text"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="dfhfkskfkk kefkesj"
            android:textColor="@color/app_blue"
            android:textStyle="bold"
            android:background="@color/text_color_white"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:tint="@color/app_blue"
            android:layout_toEndOf="@id/destination_marker_text"
            android:background="@color/text_color_white"
            android:src="@drawable/right_arrow_image"/>

    </RelativeLayout>

</LinearLayout>